---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home - Designer Portfolio">
  <div class="pt-16">
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Minimal Design
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
          Focused on clean, elegant design solutions
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/work"
            class="inline-block px-8 py-3 bg-gray-900 text-white font-medium rounded-md hover:bg-gray-800 transition-colors"
          >
            View Work
          </a>
          <a
            href="/contact"
            class="inline-block px-8 py-3 bg-white text-gray-900 border-2 border-gray-900 font-medium rounded-md hover:bg-gray-50 transition-colors"
          >
            Contact Me
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
